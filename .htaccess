<IfModule mod_expires.c>
  ExpiresActive On
 # Images
  ExpiresByType image/png "access 1 day"
  ExpiresByType image/webp "access 1 day"
  # Fonts
  ExpiresByType font/ttf "access 1 day"
  ExpiresByType font/otf "access 1 day"
  ExpiresByType font/woff "access 1 day"
  ExpiresByType font/woff2 "access 1 day"
  ExpiresByType application/font-woff "access 1 day"
  ExpiresByType application/font-woff2 "access 1 day"

  # CSS, JavaScript
  ExpiresByType text/css "access 1 day"
  ExpiresByType text/javascript "access 1 day"
  ExpiresByType application/javascript "access 1 day"
</IfModule>